/* design and build */
.blackBoxGrid {
	padding:0;

	a {color:white; text-decoration:none;}

	.column {
		background-size:cover;
		padding:25px;
		color:white;
		text-align:center;

		h1, h3 {font-family:$font-01; color:white;}
		p {font-family:$font-03;}

		.content h1, .content h3, .content p {
			text-align:left;
			color:$color-06;
		}
	}

