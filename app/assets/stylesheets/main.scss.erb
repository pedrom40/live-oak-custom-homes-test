@media (min-width:767px){

	.aboutPhilosophy, .gallery01 {
		margin-right:10px !important;
    margin-bottom:10px !important;
	}
	.series, .gallery02 {
		margin-bottom:10px !important;
	}
	.neighborhoods, .accolades, .gallery03 {
		margin-right:10px !important;
	}

}
@media (min-width:992px){

	.blackBoxGrid {
		.column {
			height:380px;

			h1 {
				margin-top:90px;
			}
		}
	}

}


/* header */
header {height:62px; color:white; border-bottom:solid 9px $color-02; background:$color-01;}
  #logo {position:absolute; top:5px; left:25px; z-index:1000;}
  nav {
    width:100%;

    a {color:white;}

    #mobileBtn {
      float:right;
      display:block;
      margin:4px 20px;
      font-size:2em;
    }

    .menu {
      display:none;
      position:relative;
      top:58px;
      width:100%;
      text-align:left;
      background:$color-02;
      z-index:888;

      a {
        display:block;
        padding:5px 20px;
        font-family:$font-01;
        font-size:1.5em;
        border-bottom:dotted 1px $color-05;

        &:last-child {
          border:none;
        }

				i {
					position:relative;
    			top:-6px;
			    font-size:0.4em;
				}
      }

      span {display:none;}

			.sub-menu {
				padding: 15px;

				a {
					font-size:1.25em !important;
					border-bottom:none !important;
				}
			}
    }
  }
  @media (min-width:767px){
    #mobileBtn {display:none !important;}
    nav .menu {
      display:block !important;
      position:relative;
      top:5px;
      font-family:$font-02;
      text-align:right;
      background:transparent;

      a {
        display:inline;
        padding:0 7px;
        font-size:1.1em;
        border:none;

				i {
					top:-4px;
				}
      }

      span {
        display:inline;
        font-size:1.5em;
      }

			.sub-menu {
		    position:absolute;
		    width:100%;
				margin-top:11px;
				padding:2px 0 4px 0;
				text-align:right;
		    background:$color-02;
			}

    }
  }
  @media (min-width:992px){
    nav .menu {
			top:7px;

			a {
				padding:0 15px;
				font-size:1.4em;
			}
			.sub-menu {
				a {
					font-size:1.5em !important;
				}
			}
		}
  }


/* main slider */
.mainSlider, section.gallery {
  position:relative;

  .heading {
    position:absolute;
    width:100%;
    height:100%;
    z-index:4;

    h1 {
      position:relative;
      top:33%;
      margin:0;
      padding:0;
      font-family:$font-01;
      font-size:2.2em;
      text-align:center;
      line-height:0.7em;
      letter-spacing:2px;
      color:white;
    }
  }
}
@media (min-width:767px){
	.mainSlider .heading h1 {
		font-size:6em;
	}
}


/* sliders */
.rslides {
  position:relative;
  list-style:none;
  overflow:hidden;
  width:100%;
  padding:0;
  margin:0;

  li {
    -webkit-backface-visibility:hidden;
    position:absolute;
    display:none;
    width:100%;
    left:0;
    top:0;
    margin-bottom:0;

    &:first-child {
      position:relative;
      display:block;
      float:left;
    }
  }

  img {
    display:block;
    height:auto;
    float:left;
    width:100%;
    border:0;
  }

}
.centered-btns_nav {
  z-index:5;
  position:absolute;
  -webkit-tap-highlight-color:rgba(0,0,0,0);
  top:55%;
  left:0;
  opacity:0.7;
  text-indent:-9999px;
  overflow:hidden;
  text-decoration:none;
  height:61px;
  width:38px;
  background:transparent url("<%= asset_path 'themes.gif' %>") no-repeat left top;
  margin-top:-45px;
}
.centered-btns_nav:active {
  opacity:1.0;
}
.centered-btns_nav.next {
  left:auto;
  background-position:right top;
  right:0;
}
@media (min-width:767px){
	.centered-btns_nav {
		top:49%;
	}
}


/* footer */
footer {
	margin-top:10px;
  padding:15px;
  font-family:$font-02;
  font-size:1.4em;
  text-align:center;
  color:white;
  border-top:solid 9px $color-04;
  background:$color-03;

  a {
    padding:0 8px;
    color:white;

    &:hover {
      color:black;
    }
		&:first-child {
			padding-left:0;
		}
		&:last-child {
			padding-right:0;
		}

		i {
			display:none !important;
		}
  }
}
@media (min-width:992px){
  footer {
    height:63px;
    padding:10px 15px;
    font-size:1.2em;

    .menu {
      float:left;

      a {}
    }
    .copyright {float:right;}
  }
}
