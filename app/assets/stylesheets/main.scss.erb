/* fonts */
@font-face {
	font-family: 'OstrichSans-Black';
	src: url('/fonts/OstrichSans-Black.eot');
	src: local('☺'), url('/fonts/OstrichSans-Black.woff') format('woff'), url('/fonts/OstrichSans-Black.ttf') format('truetype'), url('/fonts/OstrichSans-Black.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'Blogger_Sans';
	src: url('/fonts/Blogger_Sans.eot');
	src: local('☺'), url('/fonts/Blogger_Sans.woff') format('woff'), url('/fonts/Blogger_Sans.ttf') format('truetype'), url('/fonts/Blogger_Sans.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'OstrichSans-Light';
	src: url('/fonts/OstrichSans-Light.eot');
	src: local('☺'), url('/fonts/OstrichSans-Light.woff') format('woff'), url('/fonts/OstrichSans-Light.ttf') format('truetype'), url('/fonts/OstrichSans-Light.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}

$font-01:'OstrichSans-Black', sans-serif;
$font-02:'OstrichSans-Light', sans-serif;
$font-03:'Blogger_Sans', sans-serif;

/* colors */
$color-01:#8b0304; /* main maroon */
$color-02:#6e0a0b; /* darker maroon */
$color-03:#b97f0e; /* tan/brown */
$color-04:#92661e; /* darker tan/brown */
$color-05:#bcbdc0; /* light grey */
$color-06:#393939; /* text color */

/* global */
body {margin:0; padding:0; font-size:16px;}
section {
  position:relative;

  .imgBox {
    position:relative;
    height:200px;
    overflow:hidden;

    img {
      position:absolute;
      bottom:0;
    }
  }

  .content {
    padding:25px;

    h1 {
      font-family:$font-01;
      color:black;
    }
    p {
      font-family:$font-03;
      color:$color-06;
    }
  }
}
.sliderContainer {
  position:relative;
}
.scrollDownBtnContainer {
  padding:0 25px;

  .scrollDownBtn {
    position:absolute;
    display:block;
    width:88%;
    height:45px;
    padding-top:10px;
    bottom:0;
    opacity:0.5;
    color:white;
    z-index:6;
    background:black;
    text-align:center;
  }
}

/* header */
header {height:62px; color:white; border-bottom:solid 9px $color-02; background:$color-01;}
  #logo {position:absolute; top:5px; left:25px;}
  nav {
    width:100%;

    a {
      color:white;
    }

    #mobileBtn {
      float:right;
      display:block;
      margin:4px 20px;
      font-size:2em;
    }

    .menu {
      display:none;
      position:relative;
      top:58px;
      width:100%;
      text-align:left;
      background:$color-02;
      z-index:999;

      a {
        display:block;
        padding:5px 20px;
        font-family:$font-01;
        font-size:1.5em;
        border-bottom:dotted 1px $color-05;

        &:last-child {
          border:none;
        }
      }
      span {display:none;}
    }
  }
  @media (min-width:767px){
    #mobileBtn {display:none !important;}
    nav .menu {
      display:block !important;
      position:relative;
      top:9px;
      font-family:$font-02;
      text-align:right;
      background:transparent;

      a {
        display:inline;
        padding:0 10px;
        font-family:$font-02;
        font-size:1.5em;
        border:none;
      }

      span {
        display:inline;
        font-size:1.5em;
      }

    }
  }
  @media (min-width:992px){
    nav .menu a {padding:0 15px;}
  }

/* main slider */
.mainSlider {
  position:relative;

  .heading {
    position:absolute;
    width:100%;
    height:100%;
    z-index:4;

    h1 {
      position:relative;
      top:37%;
      margin:0;
      padding:0;
      font-family:$font-01;
      font-size:2.2em;
      text-align:center;
      line-height:0.7em;
      letter-spacing:1px;
      color:white;

      small {display:block; font-size:0.5em; letter-spacing:3px;}
    }
  }

  .mask {
    position:absolute;
    width:100%;
    height:100%;
    opacity: 0.5;
    background:black;
    z-index:3;
  }
}

/* sliders */
.rslides {
  position:relative;
  list-style:none;
  overflow:hidden;
  width:100%;
  padding:0;
  margin:0;

  li {
    -webkit-backface-visibility:hidden;
    position:absolute;
    display:none;
    width:100%;
    left:0;
    top:0;
    margin-bottom:0;

    &:first-child {
      position:relative;
      display:block;
      float:left;
    }
  }

  img {
    display:block;
    height:auto;
    float:left;
    width:100%;
    border:0;
  }

}
.centered-btns_nav {
  z-index:5;
  position:absolute;
  -webkit-tap-highlight-color:rgba(0,0,0,0);
  top:55%;
  left:0;
  opacity:0.7;
  text-indent:-9999px;
  overflow:hidden;
  text-decoration:none;
  height:61px;
  width:38px;
  background:transparent url("<%= asset_path 'themes.gif' %>") no-repeat left top;
  margin-top:-45px;
}
.centered-btns_nav:active {
  opacity:1.0;
}
.centered-btns_nav.next {
  left:auto;
  background-position:right top;
  right:0;
}

/* footer */
footer {
  padding:15px;
  font-family:$font-02;
  font-size:1.5em;
  text-align:center;
  color:white;
  border-top:solid 9px $color-04;
  background:$color-03;

  a {
    padding:0 15px;
    color:white;

    &:hover {
      color:black;
    }
  }
}
@media (min-width:992px){
  footer {
    height:63px;
    padding:10px 15px;
    font-size:1.2em;

    .menu {
      float:left;

      a {}
    }
    .copyright {float:right;}
  }
}
