/* fonts */
@font-face {
	font-family: 'OstrichSans-Black';
	src: url('/fonts/OstrichSans-Black.eot');
	src: local('☺'), url('/fonts/OstrichSans-Black.woff') format('woff'), url('/fonts/OstrichSans-Black.ttf') format('truetype'), url('/fonts/OstrichSans-Black.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'Blogger_Sans';
	src: url('/fonts/Blogger_Sans.eot');
	src: local('☺'), url('/fonts/Blogger_Sans.woff') format('woff'), url('/fonts/Blogger_Sans.ttf') format('truetype'), url('/fonts/Blogger_Sans.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'OstrichSans-Light';
	src: url('/fonts/OstrichSans-Light.eot');
	src: local('☺'), url('/fonts/OstrichSans-Light.woff') format('woff'), url('/fonts/OstrichSans-Light.ttf') format('truetype'), url('/fonts/OstrichSans-Light.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}

$font-01:'OstrichSans-Black', sans-serif;
$font-02:'OstrichSans-Light', sans-serif;
$font-03:'Blogger_Sans', sans-serif;


/* colors */
$color-01:#8b0304; /* main maroon */
$color-02:#6e0a0b; /* darker maroon */
$color-03:#b97f0e; /* tan/brown */
$color-04:#92661e; /* darker tan/brown */
$color-05:#bcbdc0; /* light grey */
$color-06:#393939; /* text color */


/* global */
body {margin:0; padding:0; font-size:16px;}
section a {color:$color-01 !important;}
h1, h2, h3, h4 {
	font-family:$font-01;
	color:$color-01;
	margin-bottom:0;
	letter-spacing:1px;

	small {
		display:block;
		font-size:0.4em;
		letter-spacing:3px;
	}
}
h5 {
	font-family:$font-01;
	color:black;
	margin:10px 0;
}
h3 {color:$color-06;}
ul {font-family:$font-03; margin-left:25px;}
	li {margin:0; color:$color-06;}
.sub-menu {display:none;}
.tablet, .desktop {display:none;}
form {
	font-family:$font-03;
	margin-bottom:0;

	input, textarea {
		font-family:$font-03;
		border-radius:0 !important;
		background-color:white !important;
	}
	input[type=submit]{
		font-family:$font-03;
		width:100%;
		border:none;
		background-color:$color-01 !important;
	}
}
@media (min-width:992px){
	.mobile {
		display:none !important;
	}
	.desktop {
		display:block !important;
	}
}
.mask {
	position:absolute;
	width:100%;
	height:100%;
	opacity: 0.5;
	background:black;
	z-index:3;
}
.logo-box {margin-top:25px;}
.bg-img {
	background-size:cover;
	background-position:center;
}
.page-header {
	color:white;
  position:relative;
  text-align:center;
  top:40%;
  font-size:8rem;
}
.unstyle-list {
	font-family:$font-01;
	color:black;
	list-style:none;
	margin:-10px 0 30px 0;
}
.dash-list {
	font-family:$font-01;
	list-style-type:none;
	margin-left:12px;

	li {
		text-indent:-12px;
	}
	
	li::before {
		content:'- ';
		text-indent:-5px;
	}
}
.hide {
	display:none;
}
.cut-top {
	margin-top:0;
}
.cut-bottom {
	margin-bottom:0;
}

/* contact view */
@media (min-height:992px){
	section.contactUs div.desktop div.content {margin:0;}
}


/* gallery view */
section.gallery {
	.heading {
		height:175px !important;
	}
}
@media (min-width:767px) {
	.mobile {display:none !important;}
	.desktop {display:block !important;}
}


/* welcome view */
section {
  position:relative;

  .imgBox {
    position:relative;
    height:200px;
    overflow:hidden;
		background-size:cover;
		background-position:center;
  }

  .content, .content-small, .content-large {
    padding:25px;

			ul.maroon {
				margin-left:0;
				padding-left:22px;
				list-style:disc;
				border-left:solid 2px #8b0304;

				li {
	    		padding-right:8px;
	    		color:$color-02;
					font-size:2em;

					p {
						font-size:0.5em;
					}
				}
			}

    p {
      font-family:$font-03;
      color:$color-06;
			line-height:18px;
    }
  }

}
.sliderContainer {
  position:relative;
}
.scrollDownBtnContainer {
  padding:0 25px;

  .scrollDownBtn {
    position:absolute;
    display:block;
    width:88%;
    height:45px;
    padding-top:10px;
    bottom:0;
    opacity:0.5;
    color:white;
    z-index:6;
    background:black;
    text-align:center;
  }
}
@media (min-width:767px){

	.tablet {display:block !important;}
	.desktop {display:none !important;}

	.welcome .sliderContainer, .philosophy .sliderContainer, .scrollDownBtnContainer {
		display:none;
	}

}
@media (min-width:992px){
	.tablet {display:none !important;}
	.desktop {
		display:block !important;

		.imgBox {
			height:340px !important;
		}

		.content {
			margin:100px 40px;
		}
		.content-small {
			margin:25px;
		}
		.content-large {
			margin:80px 115px;
		}

		.column.column-67 .row .column .imgBox {
			height:340px !important;
		}

	}
}


/* our philosophy view */
@media (min-width:767px){

	section.ourPhilosophy div.mobile {display:none !important;}

}


/* builders story view */
@media (min-width:767px){

	section.buildersStory div.mobile {display:none !important;}

}


/* accolades view */
