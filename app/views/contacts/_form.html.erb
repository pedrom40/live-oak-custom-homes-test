<%= form_for(contact) do |f| %>

  <h3>EMAIL US:</h3>

  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: 'true' %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= email_field('contact', 'email', required: 'true') %>
  </div>

  <div class="field">
    <%= f.label :comments %>
    <%= f.text_area :comments, required: 'true' %>
  </div>

  <div class="actions">
    <%= f.submit("SEND", id:"submit", onclick:"return verifyHuman($('#spamChecker').val());") %>
  </div>

  <input type="hidden" name="spamChecker" id="spamChecker" value="" />

<% end %>
